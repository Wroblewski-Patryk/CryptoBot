    "interval": "15m",
    "rsi": { "enabled": true, "period": 14, "overbought": 70, "oversold": 30 },
    "macd": { "enabled": true, "fastPeriod": 12, "slowPeriod": 26, "signalPeriod": 9 },
    "bollinger": { "enabled": true, "period": 20, "stdDev": 2 },
