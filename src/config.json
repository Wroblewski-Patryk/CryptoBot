{
  "trading": {
    "baseCurrency": "USDT",
    "forbiddenCurrencies": ["USDC", "FDUSD", "HIPPO"],
    "maxOpenPositions": 10,
    "marketType": "future",
    "contractType": "PERPETUAL",
    
    "risk": {
      "perTrade": 1.5, 
      "leverage": 12
    },
    "order":{
      "type": "market",
      "marginMode": "ISOLATED"
    }
  },
  "tp": {
    "enabled": true,
    "percent": 250
  },
  "ttp": {
    "enabled": true,
    "start": 7.5,
    "step": 4
  },
  "dca": {
    "enabled": true,
    "percents": [ -20, -40, -60, -80 ],
    "times": 4,
    "multiplier": 1
  },
  "tsl": {
    "enabled": true,
    "start": -35,
    "step": 5
  },
  "sl": {
    "enabled": false,
    "percent": 60
  },
  "indicators": {
    "intervals": {
      "low": "15m",
      "high": "2h"
    },
    "rsi": { "enabled": true, "weight": 1.0,
       "period": 21, "overbought": 75, "oversold": 25 },
    "macd": { "enabled": true, "weight": 1.2,
       "fastPeriod": 12, "slowPeriod": 30, "signalPeriod": 9 },
    "bollinger": { "enabled": true, "weight": 1.0,
      "period": 30, "stdDev": 2.5 },
    "adx": { "enabled": true,  "weight": 0.8,
      "period": 20, "threshold": 35 },
    "atr": { "enabled": true,  "weight": 0.6,
      "period": 14, "multiplier": 1.5, 
        "thresholdLow": 0.7, "thresholdHigh": 1.7 },
    "emaShort": { "enabled": true, "weight": 0.5,
      "period": 10 },
    "emaLong": { "enabled": true, "weight": 0.5,
      "period": 30 }
  },

  "strategies": {
    "reversal": {
      "enabled": true,
      "minStrength": 0.6,
      "indicators": ["rsi","macd", "bollinger", "adx", "atr"]
    },
    "trendFollowing": {
      "enabled": false,
      "minStrength": 0.5,
      "indicators": ["emaShort", "emaLong", "rsi", "macd", "adx"]
    },
    "ichimoku": {
      "enabled": false
    }
  }
}